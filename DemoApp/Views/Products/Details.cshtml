@model DemoApp.Models.Product
@{
    ViewBag.Title = "Product Details";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
}

<h2>Product Details</h2>

<table class="table">
    <tr>
        <th>Image</th>
        <td>
            <img src="data:image;base64,@Model.Photo" width="100px" />
        </td>
    </tr>
    <tr>
        <th>Product ID</th>
        <td>@Model.ProductID</td>
    </tr>
    <tr>
        <th>Product Name</th>
        <td>@Model.ProductName</td>
    </tr>
    <tr>
        <th>Price</th>
        <td>
        @if (Model.Price.HasValue) { 
        
            <span>@Model.Price.Value.ToString("C")</span>
        }
        </td>
    </tr>
    <tr>
        <th>Date of Purchase</th>
        <td>
        @if(Model.DateOfPurchase.HasValue)
            {
            <span> @Model.DateOfPurchase.Value.ToString("d/M/yyyy")</span>
            }
       </td>
    </tr>
    <tr>
        <th>Availability Status</th>
        <td>@Model.AvailabilityStatus</td>
    </tr>
    <tr>
        <th>Category Name</th>
        <td>
            @if (Model.Category != null)
            {
                <span>@Model.Category.CategoryName</span>
            }
        </td>
    </tr>
    <tr>
        <th>Brand Name</th>

        <td>
        @if(Model.Brand!=null)
            {
            <span> @Model.Brand.BrandName</span>
            }
       </td>
    </tr>
    <tr>
        <th>Active</th>
        <td>@Model.Active</td>
    </tr>
</table>

<a href="/products/index">Back to Products</a>